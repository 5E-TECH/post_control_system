{
  "name": "beepost-printer-windows",
  "version": "1.0.0",
  "description": "Beepost Printer Server for Windows - MQTT based thermal printer service",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "package": "npm run build && pkg dist/index.js --targets node18-win-x64 --output beepost-printer.exe",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js"
  },
  "pkg": {
    "assets": [
      "config.json"
    ],
    "outputPath": "release"
  },
  "dependencies": {
    "mqtt": "^5.3.0",
    "node-windows": "^1.0.0-beta.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2"
  },
  "author": "Beepost",
  "license": "MIT"
}
